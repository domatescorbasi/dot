# resize window (you can also use the mouse for that)
set $mode_resize  Resize (   )
mode "$mode_resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "$mode_resize"

set $mode_system Lock(l)   Logout(e)   Suspend(s)   Hibernate(h)   Reboot(r)   Shutdown(Shift+s)
mode "$mode_system" {
        # Pressing l will lock the screen with fancy screen blur.
        # Pressing e will log out from the users session.
        # Pressing s will suspend the session to ram and preserve energy.
        # Pressing h will hibernate the session to harddisk and preserve energy.
        # Pressing r will reboot the machine.
        # Pressing shift and s will shutdown the machine.
        bindsym l exec --no-startup-id i3exit lock, mode "default"
        bindsym e exec --no-startup-id i3exit logout, mode "default"
        bindsym s exec --no-startup-id i3exit suspend, mode "default"
        bindsym h exec --no-startup-id i3exit hibernate, mode "default"
        bindsym r exec --no-startup-id i3exit reboot, mode "default"
        bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

set $mode_print  Screenshot mode --  Fullscreen(f)    Focused window(w)
mode "$mode_print"  {
        # Pressing f will take a full screenshot and save it to appropriate place.
        # Pressing w will take screenshot of a window and save it to appropriate place.
        bindsym f exec scrot -e 'mv $f /home/hztrance/Pictures/ScreenShots/', mode "default"
        bindsym w exec scrot -u -e 'mv $f /home/hztrance/Pictures/ScreenShots/', mode "default"

        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym Print mode "$mode_print"

set $mode_screen  Presentation mode --  Single monitor(s)    Multi monitor(m)
mode "$mode_screen"  {
        # Pressing s will replace i3 configs for single monitor and execute xrandr appropriately.
        # Pressing w will replace i3 configs for multi monitors and execute xrandr appropriately.
        bindsym s exec /home/hztrance/Scripts/i3-monitor.sh single, mode "default"
        bindsym m exec /home/hztrance/Scripts/i3-monitor.sh multi, mode "default"

        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+F8 mode "$mode_screen"

